    />
    <title>絶景九州</title>
    <%- include('common') %>
    <script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/dropzone@5/dist/min/dropzone.min.css" type="text/css" />
    <script>Dropzone.autoDiscover = false;</script>

  </head>
  <body>
    <div id="loader-wrapper">
      <div class="lds-spinner"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
    </div>
    <input type="hidden" id="mapId" value="<%= mapId %>">

    <%- include('topNav') %>

    <ul id="slideOutMobile" class="sidenav">
      <li><a href="./index.html"> ホーム </a></li>
      <li onclick="menuClick('about')">
        <a href="#about"> 絶景九州について </a>
      </li>
      <li onclick="menuClick('post')"><a href="#!"> 写真を投稿する </a></li>
      <li onclick="menuClick('watch')"><a href="#!"> 写真を見る </a></li>
      <li onclick="menuClick('commercial')">
        <a href="#!"> 商業利用について </a>
      </li>
    </ul>

    <ul id="slide-out" class="sidenav">
      <li>
        <div class="user-view">
          <!-- <div class="background">
            <img src="img/logo/logo.png" />
          </div> -->
          <a href="#user"><img class="circle" src="img/logo/logo.png" /></a>
        </div>
      </li>
      <li><a href="./index.html"> ホーム </a></li>
      <li onclick="menuClick('about')">
        <a href="#about"> 絶景九州について </a>
      </li>
      <li onclick="menuClick('post')"><a href="#!"> 写真を投稿する </a></li>
      <li onclick="menuClick('watch')"><a href="#!"> 写真を見る </a></li>
      <li onclick="menuClick('commercial')">
        <a href="#!"> 商業利用について </a>
      </li>
      <li>
        <a href="#!"><i class="material-icons">cloud</i>First Link With Icon</a>
      </li>
      <li><a href="#!">Second Link</a></li>
      <li><div class="divider"></div></li>
      <li><a class="subheader">Subheader</a></li>
      <li><a class="waves-effect" href="#!">Third Link With Waves</a></li>
    </ul>

    <div class="section no-pad-bot">
    <div class="container">
      <div id="post" class="section">
        <div class="container">
          <br /><br />
          <div class="row center">
            <h5 class="header col s12 light">写真を投稿する</h5>
          </div>
          <div class="row center">
            <form action="/uploads" id="uploadFiles" class="dropzone" enctype="multipart/form-data"></form>
            <button type="button" id="uploadBtn" class="btn btn-primary" onclick="sendFiles();">アップロード</button>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <% records.forEach(function (record, key) { %>
        <img src="<%= record.url %>" alt="image" style="height: 480px; width: auto;">
      <% }); %>
    </div>

    <div style="position: fixed; bottom: 0;">
      <%- include('footer') %>
    </div>

    <!--Scripts-->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="../public/js/materialize/materialize.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/exif-js"></script>
    <script src="../public/js/uploads.js"></script>
  </body>
</html>
